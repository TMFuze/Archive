<Window x:Class="Archive.Pages.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Archive.Pages"
        mc:Ignorable="d"
          Title="Note Window" Height="150" Width="300">
    <Grid>
        <TextBlock Text="Введите примечание:" Margin="10" />
        <TextBox x:Name="NoteTextBox" Width="200" Height="30" Margin="10"/>
        <Button Content="OK" Width="75" Height="30" Margin="10" HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</Window>
